<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/reported_comment_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_marginBottom="8dp">

    <!-- Username and Report Reason -->
    <TextView
        android:id="@+id/reported_comment_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textStyle="bold"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/reported_comment_reason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reported for: Reason"
        android:textColor="#FF0000"
        android:layout_marginTop="4dp" />

    <!-- Comment Content -->
    <TextView
        android:id="@+id/reported_comment_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comment content goes here..."
        android:layout_marginTop="8dp" />

    <!-- Timestamp -->
    <TextView
        android:id="@+id/reported_comment_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MM/dd/yyyy HH:mm"
        android:textSize="12sp"
        android:textColor="#808080"
        android:layout_marginTop="4dp" />

    <!-- Action Buttons: Delete and Remove Report -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp">

        <Button
            android:id="@+id/delete_comment_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:background="@color/design_default_color_error"
            android:textColor="@android:color/white"
            android:layout_marginEnd="16dp" />

        <Button
            android:id="@+id/remove_report_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove Report"
            android:background="@color/design_default_color_primary"
            android:textColor="@android:color/white" />

    </LinearLayout>

</LinearLayout>
