<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/report_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Reported Username -->
        <TextView
            android:id="@+id/reported_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reported User: "
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Reporting Username -->
        <TextView
            android:id="@+id/reporting_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reporting User: "
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="4dp" />

        <!-- Reason -->
        <TextView
            android:id="@+id/report_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reason: "
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="4dp" />

        <!-- Timestamp -->
        <TextView
            android:id="@+id/report_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reported On: "
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="4dp" />

        <!-- Remove Report Button -->
        <Button
            android:id="@+id/remove_report_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove Report"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/design_default_color_error"
            android:textColor="@android:color/white" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
