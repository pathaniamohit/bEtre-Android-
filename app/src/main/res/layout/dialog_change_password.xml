<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_background"
    android:orientation="vertical"
    android:padding="24dp"
    android:elevation="4dp"
    android:clipToOutline="true">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Password"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:paddingBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/rounded_edit_text_background"
        android:padding="12dp"
        android:layout_marginBottom="12dp">

        <EditText
            android:id="@+id/current_password_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Current Password"
            android:inputType="textPassword"
            android:background="@null"
            android:padding="0dp"
            android:textColorHint="@android:color/darker_gray" />

        <ImageView
            android:id="@+id/show_current_password"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:padding="4dp"
            android:src="@drawable/ic_show_password"
            android:contentDescription="Show/Hide Password" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/rounded_edit_text_background"
        android:padding="12dp"
        android:layout_marginBottom="12dp">

        <EditText
            android:id="@+id/new_password_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="New Password"
            android:inputType="textPassword"
            android:background="@null"
            android:padding="0dp"
            android:textColorHint="@android:color/darker_gray" />

        <ImageView
            android:id="@+id/show_new_password"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:padding="4dp"
            android:src="@drawable/ic_show_password"
            android:contentDescription="Show/Hide Password" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/rounded_edit_text_background"
        android:padding="12dp"
        android:layout_marginBottom="24dp">

        <EditText
            android:id="@+id/reenter_password_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Confirm New Password"
            android:inputType="textPassword"
            android:background="@null"
            android:padding="0dp"
            android:textColorHint="@android:color/darker_gray" />

        <ImageView
            android:id="@+id/show_reenter_password"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:padding="4dp"
            android:src="@drawable/ic_show_password"
            android:contentDescription="Show/Hide Password" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="8dp"
        android:weightSum="2">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_cancel_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            android:textSize="16sp"
            android:textColor="@color/red"
            app:backgroundTint="@android:color/white"
            android:textStyle="bold"
            app:cornerRadius="12dp"
            app:strokeColor="@color/red"
            app:strokeWidth="2dp"
            android:paddingVertical="12dp"
            android:elevation="2dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_update_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Update"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            app:backgroundTint="@color/blue"
            android:textStyle="bold"
            app:cornerRadius="12dp"
            android:paddingVertical="12dp"
            android:elevation="2dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</LinearLayout>
