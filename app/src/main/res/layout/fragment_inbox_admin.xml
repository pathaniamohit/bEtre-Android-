<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/inbox_admin_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InboxAdminFragment">

    <!-- ProgressBar to indicate loading -->
    <ProgressBar
        android:id="@+id/admin_progress_bar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- RecyclerView to display reported comments -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/reported_comments_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:layout_marginTop="8dp" />

</RelativeLayout>

