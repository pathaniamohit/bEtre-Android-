<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/splash"
        android:layout_gravity="start"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_back"
        />

    <!-- Post Image -->
    <ImageView
        android:id="@+id/edit_post_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:contentDescription="Post Image"
        android:scaleType="centerCrop"
        android:src="@drawable/sample_image"
        android:background="@drawable/rounded_image_background"/>


    <EditText
        android:id="@+id/edit_post_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Update your content..."
        android:background="@drawable/rounded_edit_text_background"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:inputType="textMultiLine"
        android:lines="3"
        android:gravity="top"
        android:padding="10dp"
        android:layout_marginTop="16dp"
        android:elevation="2dp"/>

    <!-- Post Location -->
    <EditText
        android:id="@+id/edit_post_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Update your location"
        android:background="@drawable/rounded_edit_text_background"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:inputType="text"
        android:padding="10dp"
        android:layout_marginTop="16dp"
        android:elevation="2dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="bottom|center_horizontal"
        android:paddingHorizontal="8dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_discard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="48dp"
            android:minWidth="100dp"
            android:text="Discard"
            android:textColor="@color/red"
            app:backgroundTint="@android:color/white"
            android:textStyle="bold"
            app:cornerRadius="12dp"
            app:strokeColor="@color/red"
            app:strokeWidth="2dp"
            android:elevation="2dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_update_post"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="48dp"
            android:minWidth="100dp"
            android:text="Update"
            android:textColor="@android:color/white"
            app:backgroundTint="@color/blue"
            android:textStyle="bold"
            app:cornerRadius="12dp"
            android:elevation="2dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</LinearLayout>
